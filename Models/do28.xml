  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>25.0</factor>
    <center>
      <x-m>  4.085 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.178 </z-m>
    </center>
    <axis>
      <x>  0.00 </x>
      <y>  1.00 </y> 
      <z>  0.00 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>30</factor>
    <axis>
      <x1-m> 4.834 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.077 </z1-m>
      <x2-m> 4.991 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 2.405 </z2-m>
    </axis>
  </animation>

